        public int ConnectCom(string ComNum,int BaudRate)
        {
            try
            {
                Com.PortName = ComNum;
                Com.BaudRate = BaudRate;
                Com.DataBits = 8;
                Com.Parity = Parity.None;
                Com.StopBits = StopBits.One;

            }
            catch{
                return -1;
            }

            Com.Open();
            Com.BaseStream.WriteTimeout = 1;
            return 0;
        }

        public void DisConnectCom()
        {
            Com.Close();
        }

